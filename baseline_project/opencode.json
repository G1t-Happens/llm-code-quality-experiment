{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "fault_localization": {
      "mode": "primary",
      "prompt": "{file:~/projects/llm-code-quality-experiment/docs/experiment/llm_config/system_prompt.txt}",
      "temperature": 0.0,
      "top_p": 0.90,
      "max_tokens": 32768,
      "timeout": 600,
      "response_format": {
        "type": "json_schema",
        "strict": true,
        "schema": {
          "name": "bug_list",
          "description": "Liste gefundener Bugs im Code",
          "strict": true,
          "schema": {
            "type": "object",
            "properties": {
              "bugs": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "filename": {
                      "type": "string",
                      "description": "Dateiname relativ zum Projektroot"
                    },
                    "start_line": {
                      "type": "integer",
                      "minimum": 1
                    },
                    "end_line": {
                      "type": "integer",
                      "minimum": 1
                    },
                    "severity": {
                      "type": "string",
                      "enum": ["critical", "high", "medium", "low"]
                    },
                    "error_description": {
                      "type": "string",
                      "minLength": 10
                    }
                  },
                  "required": ["filename", "start_line", "end_line", "severity", "error_description"],
                  "additionalProperties": false
                }
              }
            },
            "required": ["bugs"],
            "additionalProperties": false
          }
        }
      },
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "read": true,
        "glob": true,
        "list": true,
        "task": true
      }
    }
  }
}